
@{
    ViewData["Title"] = "OrderDetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model OrderDetails
    <div class="span9" id="content">
        @if (ViewBag.OList != null)
        {
            <div class="control-group">
                <label class="control-label">Order ID<span class="required">*</span></label>
                <div class="controls">
                    <input type="text" value="@ViewData["order_id"]" class="span6 m-wrap" readonly/>
                </div>
            </div>
            <div class="row-fluid">
                <!-- block -->
                <div class="block">
                    <div class="navbar navbar-inner block-header">
                        <div class="muted pull-left">Order</div>
                    </div>
                    <div class="block-content collapse in">
                        <div class="span12">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Product name</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int i = 0;}
                                    @foreach (OrderDetails order in ViewBag.OList)
                                    {
                                        <tr>
                                            <td>@{i++;}@i</td>
                                            <td>@order.Product_ID</td>
                                            <td>@order.Quantity</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /block -->
            </div>
        }
    </div>
