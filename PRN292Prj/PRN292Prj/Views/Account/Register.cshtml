@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
@model PRN292Prj.Models.User
<form asp-action="AddUser">
    <h3>Registration Form</h3
    <div class="form-wrapper">
        <input asp-for="Username" placeholder="Username" class="form-control">
        <i class="zmdi zmdi-account"></i>
    </div>
    <font color="red">
        <span asp-validation-for="Username" class="text-danger"></span>
        @if (ViewData["UsernameInvalid"] != null)
        {
            @ViewData["UsernameInvalid"]
            <i class="zmdi zmdi-comment-alert"></i>
        }
    </font>
    <div class="form-wrapper">
        <input asp-for="Password" type="Password" placeholder="Password" class="form-control">
        <i class="zmdi zmdi-lock"></i>
    </div>
    <font color="red">
        <span asp-validation-for="Password" class="text-danger"></span>
        @if (ViewData["PasswordInvalid"] != null)
        {
            @ViewData["PasswordInvalid"]
            <i class="zmdi zmdi-comment-alert"></i>
        }
    </font>
    <div class="form-wrapper">
        <input name="confirm" type="password" placeholder="Confirm Password" class="form-control">
        <i class="zmdi zmdi-lock"></i>
    </div>
    <font color="red">
        <span asp-validation-for="Password" class="text-danger"></span>
    </font>
    @if (ViewData["Invalid"] != null)
    {
        <div class="form-wrapper">
            <font color="red">
                @ViewData["Invalid"]
                <i class="zmdi zmdi-comment-alert"></i>
            </font>
        </div>
    }
    <button>
        Register
        <i class="zmdi zmdi-arrow-right"></i>
    </button>
</form>
