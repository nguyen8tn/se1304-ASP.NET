
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@model UserIndexPage
@section Search{
    <div class="container">
        <h3>Search</h3>
        <form asp-action="Search">
            <div class="control-group">
                <div class="controls">
                    <input type="text" class="span6 m-wrap" asp-for="Search" value="@Html.Raw(Model.Search)" />
                </div>
                <div class="controls">
                    <select class="span6 m-wrap" asp-for="Scale" asp-items="@Model.ListScale">
                        <option value="">Select...</option>
                    </select>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
    </div>
}
<section class="product-section spad">
    <div class="container">
        <ul class="product-filter controls">
            <li class="control" data-filter=".new"><a asp-action="Index" asp-controller="Users">New arrivals</a></li>
            <li class="control" data-filter=".best"><a asp-action="BestSeller" asp-controller="Users">Best sellers</a></li>
        </ul>

        <div class="row" id="product-filter">
            @{
                foreach (UserIndexPage item in ViewBag.PList)
                {
                    <div class="mix col-lg-3 col-md-6 new">
                        <div class="product-item">
                            <figure>
                                <img src="@Url.Content(item.Img)" width="262" height="363" alt="">
                                <div class="pi-meta">
                                    <div class="pi-m-left">
                                        <img src="~/user/img/icons/eye.png" alt="">
                                        <p><a asp-action="ViewDetails" asp-controller="Users" asp-route-id="@item.ID">Details</a></p>
                                    </div>
                                </div>
                            </figure>
                            <div class="product-info">
                                <h6>@item.Name (@item.Scale)</h6>
                                <p>@item.Price$</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
